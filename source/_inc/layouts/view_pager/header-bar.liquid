<div z-field="header-bar" class="header-bar">

    <div class="header" layout="row center-justify">
        <div z-field="header-box" layout="row center-left">
            <!-- Home page header -->
            <div class="title" layout="row center-left">
                <img src="{{ '/images/zuix-logo.svg' | url }}" width="36" height="36" alt="Logo">
                {{ app.title }}
            </div>
            <!-- Search page header -->
            <div class="search-box" layout="row center-center">
                <span class="input">
                <input type="text" placeholder="Enter search terms">
                <span></span>
                </span>
            </div>
            <!-- Notification page header -->
            <div class="title">
                Notifications
            </div>
            <!-- About page header -->
            <div class="title">
                About
            </div>
        </div>
        <button class="header-button" data-page="1">
            <i class="material-icons">search</i>
        </button>
    </div>
    <div z-field="header-tools">
        <div ctrl z-load="@lib/controllers/view-pager"
             z-options="options.pageIndicator"
             class="topics visible-on-ready">
{% assign sectionList = collections.news_section | sort: 'data.order' %}
{% for section in sectionList %}
            <div data-section="{{ section.data.folder }}" data-order="{{ section.data.order }}">
                {{ section.data.title }}
            </div>
{%- endfor %}
        </div>
    </div>

</div>
